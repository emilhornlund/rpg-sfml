# Keep defaults
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 120

# YAML / YML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown: don't strip trailing spaces (they mean soft line breaks)
[*.md]
trim_trailing_whitespace = false
